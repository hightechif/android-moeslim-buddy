<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base App style.   -->
    <style name="moeslimStyle">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
    </style>

    <style name="H1" parent="moeslimStyle">
        <item name="android:textSize">@dimen/text_36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2" parent="moeslimStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="H3" parent="moeslimStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="H4" parent="moeslimStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="B3" parent="moeslimStyle">
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="B4" parent="moeslimStyle">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <declare-styleable name="ButtonView">
        <attr format="enum" name="variant">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="alternative" value="2"/>
            <enum name="outline" value="3"/>
            <enum name="custom" value="4"/>
        </attr>
        <attr format="enum" name="size">
            <enum name="medium" value="0"/>
            <enum name="small" value="1"/>
        </attr>
        <attr format="reference" name="buttonBackground"/>
        <attr format="reference" name="buttonTextColor"/>
    </declare-styleable>
</resources>